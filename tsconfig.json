{
    "$schema": "https://json.schemastore.org/tsconfig.json",

    "files": ["build.ts", "src/api.ts", "src/api-types.d.ts"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "types": ["@webgpu/types", "node"],
        "noEmit": true,
        "strict": true,
        "allowImportingTsExtensions": true,
        "erasableSyntaxOnly": true,
        "verbatimModuleSyntax": true,
    }
}
