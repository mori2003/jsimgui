{
    "$schema": "https://json.schemastore.org/tsconfig.json",

    "files": ["bindgen/mod.ts"],

    "compilerOptions": {
        "outDir": "./build",

        "lib": ["ESNext", "DOM"],
        "types": ["@webgpu/types"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "allowJs": true,
        "declaration": true,

        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}
