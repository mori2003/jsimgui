{
  "name": "txml-tss-renderer",
  "version": "1.0.0",
  "description": "A minimal Trema-style XML (TXML) + stylesheet (TSS) layer for TypeScript that renders to Dear ImGui via jsimgui (WebGPU)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --config vite.lib.config.ts",
    "build:demos": "npm run build && vite build --config vite.demo.config.ts",
    "dev:jsx": "npm run build && vite --config vite.demo.config.ts",
    "test": "vitest",
    "preview": "vite preview"
  },
  "keywords": [
    "imgui", "txml", "tss", "typescript", "webgpu", "ui", "xml", "css", "renderer"
  ],
  "author": "TXML/TSS Renderer",
  "license": "MIT",
  "dependencies": {
    "@mori2003/jsimgui": "^0.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "src", "README.md", "LICENSE"
  ]
}